<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:paddingTop="10dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="50dp"
            android:id="@+id/photo"
            android:scaleType="centerInside"
            tools:ignore="RtlHardcoded" />

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/text_and_progress">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:id="@+id/name"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="aaaaaaaa"
                android:textColor="@color/colorblack"
                android:textSize="15sp"/>

            <ProgressBar
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:id="@+id/progress"
                android:layout_marginTop="6dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:max="100"
                android:background="@drawable/progressbar_progressbar"
                android:progressTint="@color/colorprogress"
                android:progressBackgroundTint="@color/colorprogressbackground"
                tools:ignore="UnusedAttribute" />

        </LinearLayout>

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:id="@+id/download_icon"
            android:layout_marginLeft="50dp"

            tools:ignore="RtlHardcoded" />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/cursor_color"/>

</LinearLayout>